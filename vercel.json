{
  "version": 2,
  "builds": [
    {
      "src": "frontend/next.config.ts",
      "use": "@vercel/next"
    },
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/app/main.py"
    },
    {
      "source": "/:path*",
      "destination": "/frontend"
    }
  ]
}